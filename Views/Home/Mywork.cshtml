@{
    ViewBag.Title = "My Work";
    var userID = ViewData["userID"];
    var products = ViewData["ProductsID"] as List<ST10026525.CLDV.Poe.Models.productTable>;
}


<h2>Products (input)</h2>
    <form action="MyWork" method="post">
        <div>
            <label for="Name">Product Name:</label>
            <input type="text" id="Name" name="Name" required>
        </div>
        <div>
            <label for="Price">Price:</label>
            <input type="number" id="Price" name="Price" required>
        </div>
        <div>
            <label for="Category">Category :</label>
            <input type="text" id="category" name="Category" required>
        </div>
        <div>
            <label for="Availability">Availability:</label>
            <input type="text" id="Availability" name="Availability" required>
        </div>
        <div>
            <button type="submit">Sign Up</button>
        </div>
    </form>


<h2>Our Products (output)</h2>

@if (userID != null)
{
   <p>User ID: @userID</p> 
}

@if (products != null && products.Count > 0)
{
    <p> Product Count: @products.Count</p>
}else
{
 <p>no products found</p>   
}

<h2>All Products</h2>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
            <th>Availability</th>
            <th>Name</th>
        </tr>
    </thead>
</table>

